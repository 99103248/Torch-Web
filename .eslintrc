{
    "extends": "babel",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ecmaFeatures": {
        "jsx": true
    },
    "env": {
        "jest": true
    },
    "rules": {
        "react/jsx-uses-vars": [ 2 ],
        "react/jsx-uses-react": [ 2 ],
        "quotes": [
            "error",
            "single"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "newline-after-var": "error",
        "semi": [
            "error",
            "never"
        ],
        "eqeqeq": [
            "error",
            "always"
        ]
    }
}
